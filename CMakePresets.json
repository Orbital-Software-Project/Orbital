{
  "version": 1,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "msvc-x64-static-debug",
      "displayName": "MSVC Win64",
      "description": "Default build using Visual Studio generator",
      "generator": "Visual Studio 16 2019",
      "binaryDir": "${sourceDir}/build/msvc-x64-static-debug",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": "OFF"
        },
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows-static"
        },
        "CMAKE_INSTALL_PREFIX": {
          "type": "PATH",
          "value": "${sourceDir}/install/msvc-x64-static-debug"
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/ThirdParty/openvslam/3rd/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "CMAKE_CXX_FLAGS": {
          "type": "STRING",
          "value": "/MTd"
        }
      },
      "environment": {
        "openvslam_DIR": "${sourceDir}/ThirdParty/openvslam/install/debug/lib/cmake/openvslam",
        "fbow_DIR": "${sourceDir}/ThirdParty/openvslam/install/debug/share/cmake/fbow"
      }
    },
    {
      "name": "msvc-x64-static-release",
      "displayName": "MSVC Win64",
      "description": "Default build using Visual Studio generator",
      "generator": "Visual Studio 16 2019",
      "binaryDir": "${sourceDir}/build/msvc-x64-static-release",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": "OFF"
        },
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows-static"
        },
        "CMAKE_INSTALL_PREFIX": {
          "type": "PATH",
          "value": "${sourceDir}/install/msvc-x64-static-release"
        },
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": {
          "type": "PATH",
          "value": "${sourceDir}/install/msvc-x64-static-release"
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/ThirdParty/openvslam/3rd/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "CMAKE_CXX_FLAGS": {
          "type": "STRING",
          "value": "/MT"
        }
      },
      "environment": {
        "openvslam_DIR": "${sourceDir}/ThirdParty/openvslam/install/release/lib/cmake/openvslam",
        "fbow_DIR": "${sourceDir}/ThirdParty/openvslam/install/release/share/cmake/fbow"
      }
    }
  ]
}